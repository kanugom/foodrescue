<%= form_tag({ controller: "pages", action: "age_post" }, class: "page-four") do %>
    <div class="conversation">
      Yum! Let's hear some more about the <%= @survey_response.food_description %>.
    </div>

    <h2>How old is your food?</h2>
    <fieldset class="options">
        <div class="option option-1">
            <button type="submit" value="1" name="answer">
              <h3>31 days or greater</h3>
              <p>Over a Month old</p>
            </button>
        </div>
        <div class="option option-2">
            <button type="submit" value="0" name="answer">
              <h3>30 days or fewer</h3>
              <p>Under a Month old</p>
            </button>
        </div>
    </fieldset>
<% end %>
